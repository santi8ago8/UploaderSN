.title
    padding 0 16px
.photos
    text-align center;

.inner-photos
    max-width 1500px;
    margin auto;
.inner-photo
    img
        vertical-align: middle;
    padding 3px
    position relative;
    .published
        color white;
        position: absolute;
        right: 8px;
        bottom: 4px;
        text-shadow: 0px 0px 6px green, 0px 0px 6px red
        text-transform uppercase;
    .overlay
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0px;
        left: 0px;
        padding 3px
        .inner-overlay
            width 100%
            height 100%
            background-color rgba(0,0,0,0.7);
            color white;
            text-align left
            p
                margin 0 8px 8px 8px;
            md-input-group
                width: 100%
                label
                    color: rgba(255,255,255,0.7);
                input
                    width 100%
                    color: rgba(255,255,255,1.0);
.photo
    display: inline-block
    width 100%
    img
        max-width 100%
.loading
    margin-bottom 8px;
md-progress-circular
    margin 8px;

.file-over
    border 3px dotted #d7d7d7;
    -webkit-transition: all 250ms
    -moz-transition: all 250ms
    -ms-transition: all 250ms
    -o-transition: all 250ms
    transition: all 250ms
.file-over.nv-file-over
    border-color #0024aa;

md-dialog
    max-width 95%
    max-height 95%
    img
        max-width: 100%;
        vertical-align:middle;/* okay see it in middle , but you can tune this */
    
.album
    .delete
        float right
        margin-left 4px

.clear
    clear both;

//layout sets the default layout on all devices.

@media (max-width: 600px)
    //layout-sm sets the layout on devices less than 600px wide (phones).
    .photo
        width 100%

@media (min-width: 600px)
    //layout-gt-sm sets the layout on devices greater than 600px wide (bigger than phones).

@media (min-width: 600px) and (max-width: 960px)
    //layout-md sets the layout on devices between 600px and 960px wide (tablets in portrait).
    .photo
        width 50%

@media (min-width: 960px)
    //layout-gt-md sets the layout on devices greater than 960px wide (bigger than tablets in portrait).

@media (min-width: 960px) and (max-width: 1200px)
    //layout-lg sets the layout on devices between 960 and 1200px wide (tablets in landscape).
    .photo
        width 33.3332%

@media (min-width: 1200px)
    //layout-gt-lg sets the layout on devices greater than 1200px wide (computers and large screens).
    .photo
        width 25%